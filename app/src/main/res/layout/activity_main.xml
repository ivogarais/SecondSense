<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_title"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/main_subtitle" />

        <EditText
            android:id="@+id/editGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/goal_input_hint"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:text="@string/default_goal_text" />

        <Button
            android:id="@+id/buttonOpenAccessibilitySettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/open_accessibility_settings" />

        <TextView
            android:id="@+id/textModelState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/model_state_idle" />

        <Button
            android:id="@+id/buttonDownloadModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/download_preferred_model" />

        <Button
            android:id="@+id/buttonPauseDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/pause_download" />

        <Button
            android:id="@+id/buttonResumeDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/resume_download" />

        <Button
            android:id="@+id/buttonCancelDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/cancel_download" />

        <Button
            android:id="@+id/buttonLoadModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/load_local_model" />

        <Button
            android:id="@+id/buttonRunGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/run_local_goal" />

        <TextView
            android:id="@+id/textAgentLogsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/agent_logs_title"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonRefreshLogs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/refresh_logs" />

            <Button
                android:id="@+id/buttonClearLogs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/clear_logs" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="8dp"
            android:background="#111111"
            android:padding="10dp">

            <TextView
                android:id="@+id/textAgentLogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="@string/agent_logs_empty"
                android:textColor="#E8E8E8"
                android:textIsSelectable="true"
                android:textSize="12sp" />
        </ScrollView>

    </LinearLayout>
</ScrollView>
